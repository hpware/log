{
  "name": "devlogs_hosting",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.0.2",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "appi": "bun run --filter @devlogs_hosting/apps/web appi",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "start": "bun run db:migrate && bun run --filter '*' start",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @devlogs_hosting/db db:push",
    "db:studio": "bun run --filter @devlogs_hosting/db db:studio",
    "db:generate": "bun run --filter @devlogs_hosting/db db:generate",
    "db:migrate": "bun run --filter @devlogs_hosting/db db:migrate",
    "package:update": "taze -r"
  },
  "packageManager": "bun@1.2.22",
  "dependencies": {
    "dotenv": "^17.2.2",
    "geist": "^1.5.1",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "version": "0.0.1"
}
